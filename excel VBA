Function RemovePunctuationNumbers(ByVal Txt As String) As String
    Dim i As Integer
    Dim Ch As String
    Dim Result As String
    
    ' Loop through each character in the input text
    For i = 1 To Len(Txt)
        Ch = Mid(Txt, i, 1)
        ' Keep only letters and spaces
        If Ch Like "[A-Za-z ]" Then
            Result = Result & Ch
        End If
    Next i
    
    RemovePunctuationNumbers = Trim(Result) ' Remove leading or trailing spaces
End Function